{% extends "basefront.html.twig" %}
{% block body %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-left" scope="col">
                    Ville
                    <a href="{{ path('voyages.sort', {champs: 'ville', ordre: 'ASC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('voyages.sort', {champs: 'ville', ordre: 'DESC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                </th>
                <th class="text-left" scope="col">
                    Pays
                    <a href="{{ path('voyages.sort', {champs: 'pays', ordre: 'ASC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('voyages.sort', {champs: 'pays', ordre: 'DESC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                </th>
                <th class="text-left" scope="col">
                    Note
                    <a href="{{ path('voyages.sort', {champs: 'note', ordre: 'ASC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('voyages.sort', {champs: 'note', ordre: 'DESC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                </th>
                <th class="text-left" scope="col">
                    Date
                    <a href="{{ path('voyages.sort', {champs: 'datecreation', ordre: 'ASC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="{{ path('voyages.sort', {champs: 'datecreation', ordre: 'DESC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                </th>
            </tr>
        </thead>
        <tbody>
            {% for visite in visites %}
                <tr>
                    <td>
                        <h5 class="text-primary">
                            <a href="#">{{ visite.ville }}</a>
                        </h5>
                    </td>
                    <td>
                        {{ visite.pays }}
                    </td>
                    <td class="text-end">
                        <strong>
                            {% if visite.note<10 %}
                                <div class="text-danger">
                                    {{ visite.note }}/20
                                </div>
                            {% else %}
                                <div class="text-success">
                                    {{ visite.note }}/20
                                </div>
                            {% endif %}
                        </strong>    
                    </td>
                    <td class="text-center">
                        {{ visite.datecreationstring }}
                    </td>
                </tr>
                {% endfor %}
        </tbody>
    </table>
{% endblock %}
